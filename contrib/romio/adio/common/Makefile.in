      ad_write_str_naive.o ad_resize.o ad_read.o ad_write.o ad_iread.o \
      ad_iwrite.o ad_done.o ad_wait.o adi_close.o ad_prealloc.o ad_fcntl.o \
      ad_iread_fake.o ad_iwrite_fake.o ad_done_fake.o ad_wait_fake.o \
