CC          = @CC@
AR          = @AR@
LIBNAME     = @LIBNAME@
srcdir      = @srcdir@

INCLUDES    = -I@MPI_INCLUDE_DIR@ -I${srcdir}/../include -I../include -I../../include  -I${srcdir}/../../../../include -I../../../../include
CFLAGS      = @CPPFLAGS@ @CFLAGS@ $(INCLUDES)

@VPATH@

AD_PIOFS_OBJECTS = ad_piofs_read.o \
      ad_piofs_open.o ad_piofs_write.o \
      ad_piofs_fcntl.o \
      ad_piofs_hints.o \
      ad_piofs.o


default: $(LIBNAME)

.c.o:
	$(CC) $(CFLAGS) -c $<

$(LIBNAME): $(AD_PIOFS_OBJECTS)
	$(AR) $(LIBNAME) $(AD_PIOFS_OBJECTS)

clean:
	@rm -f *.o
