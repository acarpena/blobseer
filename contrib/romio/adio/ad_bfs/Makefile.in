CC          = @CC@
AR          = @AR@
RANLIB      = @RANLIB@
LIBNAME     = @LIBNAME@
MPI         = @MPI@
srcdir      = @srcdir@
CC_SHL      = @CC_SHL@
SHLIBNAME   = @SHLIBNAME@

#DEFS            = @DEFS@ -I. -I${srcdir}
CPPFLAGS        = @CPPFLAGS@
INCLUDES = -I@MPI_INCLUDE_DIR@ -I${srcdir}/../include -I../include -I../../include  -I${srcdir}/../../../../include -I../../../../include
#CFLAGS      = @CPPFLAGS@ @CFLAGS@ $(INCLUDES) 
CFLAGS          = @CFLAGS@

top_builddir  = @master_topbuild_dir@
LIBTOOL       = @LIBTOOL@
C_COMPILE       = $(CC) $(DEFS) $(INCLUDES) $(CFLAGS) $(CPPFLAGS)
C_COMPILE_SHL   = $(CC_SHL) $(DEFS) $(INCLUDES) $(CFLAGS) $(CPPFLAGS)
#C_COMPILE_SHL = $(CC_SHL) 

@VPATH@

AD_BFS_OBJECTS = ad_bfs_close.o ad_bfs_read.o ad_bfs_rdcoll.o \
	ad_bfs_wrcoll.o ad_bfs_open.o ad_bfs_write.o \
	ad_bfs_done.o ad_bfs_fcntl.o ad_bfs_iread.o \
	ad_bfs_iwrite.o ad_bfs_wait.o ad_bfs_flush.o \
	ad_bfs_seek.o ad_bfs_resize.o ad_bfs_hints.o \
	ad_bfs_delete.o ad_bfs.o

default: $(LIBNAME)
	@if [ "@ENABLE_SHLIB@" != "none" ] ; then \
	    $(MAKE) $(SHLIBNAME).la ;\
	fi

.SUFFIXES: $(SUFFIXES) .p .lo

#	$(CC) $(CFLAGS) -c $<
.c.o:
	@if [ "x$(VERBOSE)" != "x1" ] ; then \
	  echo "  CC              $<" ; \
	else \
	  echo $(C_COMPILE) -c $< ; \
	fi
	@$(C_COMPILE) -c $<
#	$(C_COMPILE_SHL) $(CFLAGS) -c $< -o _s$*.o
#	@mv -f _s$*.o $*.lo
.c.lo:
	@if [ "x$(VERBOSE)" != "x1" ] ; then \
	  echo "  CC              $<" ; \
	else \
	  echo $(C_COMPILE_SHL) -c $< -o _s$*.o ; \
	  echo mv -f _s$*.o $*.lo ; \
	fi
	@$(C_COMPILE_SHL) -c $< -o _s$*.o
	@mv -f _s$*.o $*.lo

$(LIBNAME): $(AD_BFS_OBJECTS)
	$(AR) $(LIBNAME) $(AD_BFS_OBJECTS)
	$(RANLIB) $(LIBNAME) 

AD_BFS_LOOBJECTS = $(AD_BFS_OBJECTS:.o=.lo)

$(SHLIBNAME).la: $(AD_BFS_LOOBJECTS)
	$(AR) $(SHLIBNAME).la $(AD_BFS_LOOBJECTS)

clean:
	@rm -f *.o *.lo *.gcno *.gcda *.bb *.bbg
	@rm -f ${srcdir}/*.gcno ${srcdir}/*.gcda 
	@rm -f ${srcdir}/*.bb ${srcdir}/*.bbg

tags: TAGS
SOURCES = ${AD_BFS_OBJECTS:.o=.c}
HEADERS = 
TAGS:${HEADERS} ${SOURCES}
	here=`cd ../../../../.. && pwd` ; cd ${srcdir} && etags -o $$here/TAGS --append ${HEADERS} ${SOURCES}
