CC          = @CC@
AR          = @AR@
LIBNAME     = @LIBNAME@
srcdir      = @srcdir@

INCLUDES    = -I@MPI_INCLUDE_DIR@ -I${srcdir}/../include -I../include -I../../include  -I${srcdir}/../../../../include -I../../../../include
CFLAGS      = @CPPFLAGS@ @CFLAGS@ $(INCLUDES)

@VPATH@

AD_SFS_OBJECTS = \
      ad_sfs_open.o \
      ad_sfs_fcntl.o \
      ad_sfs_flush.o \
      ad_sfs.o

default: $(LIBNAME)

.c.o:
	$(CC) $(CFLAGS) -c $<

$(LIBNAME): $(AD_SFS_OBJECTS)
	$(AR) $(LIBNAME) $(AD_SFS_OBJECTS)

clean:
	@rm -f *.o
